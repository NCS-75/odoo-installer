<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Heaters -->
  <record id="elec_resistance" model="crm.heater">
    <field name="name">Electrical Resistance</field>
    <field name="color">1</field>
    <field name="sequence">1</field>
  </record>
  <record id="heat_pump_air" model="crm.heater">
    <field name="name">Heat Pump air/water</field>
    <field name="color">5</field>
    <field name="sequence">2</field>
    <field name="is_hp_required">True</field>
  </record>
  <record id="heat_pump_water" model="crm.heater">
      <field name="name">Heat Pump water/water</field>
      <field name="color">6</field>
      <field name="sequence">3</field>
      <field name="is_hp_required">True</field>
  </record>
  <record id="gas_boiler" model="crm.heater">
      <field name="name">Gas boiler</field>
      <field name="color">7</field>
      <field name="sequence">4</field>
  </record>
  <record id="wood_boiler" model="crm.heater">
      <field name="name">Wood boiler</field>
      <field name="color">8</field>
      <field name="sequence">5</field>
  </record>
  <record id="oil_boiler" model="crm.heater">
      <field name="name">Oil boiler</field>
      <field name="color">9</field>
      <field name="sequence">6</field>
  </record>
  <record id="district_heating" model="crm.heater">
      <field name="name">District Heating</field>
      <field name="color">10</field>
      <field name="sequence">7</field>
  </record>
  <record id="thermodynamic_water_heater" model="crm.heater">
      <field name="name">Thermodynamic Water Heater</field>
      <field name="color">11</field>
      <field name="sequence">8</field>
      <field name="is_hp_required">True</field>
  </record>

</odoo>
